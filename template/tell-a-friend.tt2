[% WRAPPER wrapper.tt2 %]
   <h1>Tell your friends about VanTrash!</h1>
   [% IF error %]
     <div class="error">
       [% error %]
     </div>
   [% ELSE %]
   <div class="tellfriends">
     <form action="/action/tell-friends" method="POST">
       <div class="question">
         <label for="friend_emails">Enter the email addresses of the people you'd like to introduce to this site:</label>
         <br />
         <textarea name="friend_emails" rows="5" cols="40"></textarea>
       </div>

       <div class="question">
         <label for="extra_msg">Enter an optional message to add to the email:</label>
          <br />
         <textarea name="extra_msg" rows="5" cols="40"></textarea>
       </div>

       <div class="question">
         <label for="skilltesting">To prove you are a human, please type the 2-letter code for the province Vancouver is in:</label>
          <br />
         <input type="text" name="skilltesting" size="2"/>
       </div>

       <input type="submit" name="submit" value="Invite!"/>

     </form>
   </div>
   [% END %]
[% END %]
